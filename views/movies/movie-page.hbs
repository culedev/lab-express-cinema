<div class="movies-section-title">
  <a href="/">{{title}}</a>
</div>
<div id="movie-page">
    <img src="{{movie.image}}" alt="{{movie.title}}">
    <div class="movie-info">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>{{movie.director}}</h3>
        <ul><h4>Stars</h4>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        {{#each movie.showtimes}}
        <span>{{this}} |</span>
        {{/each}}
    </div>
</div>