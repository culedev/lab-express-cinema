<div id="movies-section">
  <div class="movies-section-title">
    <a href="/">{{title}}</a>
  <h3>Click on the movie to check the showtimes!</h3>
    </div>
  <div class="movies">
    {{#each movies}}
      <div class="each-movie">
        <img src="{{this.image}}" alt="{{this.title}}" />
        <h4>{{this.title}}</h4>
        <a href="/movies/{{this._id}}">See more</a>
      </div>
    {{/each}}
  </div>
</div>